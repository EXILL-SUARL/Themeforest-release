{
  "name": "themeforest-release",
  "version": "1.0.0-alpha.1",
  "private": false,
  "description": "A Github action to automate the publishing of Themeforest items (based on releases).",
  "main": "lib/main.ts",
  "scripts": {
    "start": "node-ts .",
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint ./**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run lint && npm run package",
    "update": "yarn upgrade-interactive",
    "release": "dotenv release-it --",
    "dotenv:login": "npx dotenv-vault new && npx dotenv-vault login",
    "dotenv:pull": "npx dotenv-vault pull",
    "dotenv:push": "npx dotenv-vault push"
  },
  "release-it": {
    "github": {
      "release": true,
      "tokenRef": "RELEASEIT_TOKEN"
    },
    "npm": {
      "publish": false
    }
  },
  "repository": "git+https://github.com/EXILL-SUARL/themeforest-release.git",
  "type": "module",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/github": "^5.0.3",
    "@octokit/rest": "^19.0.4",
    "execa": "^6.1.0",
    "isomorphic-git": "^1.19.2",
    "mkdirp": "^1.0.4",
    "sharp": "^0.30.7",
    "tar": "^6.1.11",
    "tar-fs": "^2.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@octokit/types": "^7.1.1",
    "@types/mkdirp": "^1.0.2",
    "@types/node": "^18.7.12",
    "@types/sharp": "^0.30.5",
    "@types/tar": "^6.1.2",
    "@types/tar-fs": "^2.0.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.34.0",
    "@vercel/ncc": "^0.34.0",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.2.5",
    "eslint-plugin-promise": "^6.0.0",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "release-it": "^15.3.0",
    "typescript": "*"
  },
  "author": "EXILL-SUARL"
}
