{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "lib": [
      "ES2022",
      "DOM",
    ],
    "outDir": "./lib",
    "rootDir": "./lib",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}